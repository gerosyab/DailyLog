<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/messagePopupTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:text="TITLE"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/messagePopupEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="150dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@color/caldroid_lighter_gray"
        android:hint="mesage for a record"
        android:textSize="15sp"
        android:inputType="textMultiLine|textFilter|textNoSuggestions"/>
    <TextView
        android:id="@+id/messagePopupCharCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:layout_gravity="center_vertical|right"
        android:text="n / n"
        android:textSize="20sp"/>

</LinearLayout>