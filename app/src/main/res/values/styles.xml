<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Dark theme. -->
    <style name="MyCaldroidTheme" parent="CaldroidDefault">
        <item name="styleCaldroidViewLayout">@style/MyCaldroidCalendarViewLayout</item>
        <item name="styleCaldroidMonthName">@style/MyCaldroidMonthName</item>
        <item name="styleCaldroidNormalCell">@style/MyCaldroidNormalCell</item>
        <item name="styleCaldroidSquareCell">@style/MyCaldroidSquareCell</item>
        <item name="styleCaldroidGridView">@style/MyCaldroidGridView</item>
    </style>

    <style name="MyCaldroidCalendarViewLayout">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyCaldroidMonthName" parent="CaldroidDefaultMonthName">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyCaldroidGridView" parent="CaldroidDefaultGridView">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyCaldroidCell" parent="CaldroidDefaultCell">
        <item name="android:textColor">@color/cell_text_color</item>
        <item name="android:background">@drawable/date_cell_bg</item>
    </style>

    <style name="MyCaldroidNormalCell" parent="MyCaldroidCell">
        <item name="android:padding">5dp</item>
    </style>

    <style name="MyCaldroidSquareCell" parent="MyCaldroidCell" >
    </style>

    <style name="statisticTitleText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">5.0dip</item>
    </style>

    <style name="statisticText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#ff222222</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="statisticItemTitleText" parent="statisticText">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="statisticItemKeyTitleText" parent="statisticText">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="statisticItemValueTitleText" parent="statisticText">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="statisticItemKeyText" parent="statisticText">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="statisticItemValueText" parent="statisticText">
        <item name="android:gravity">right|center_vertical</item>
    </style>

</resources>